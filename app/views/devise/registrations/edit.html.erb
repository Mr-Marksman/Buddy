<h2><%= I18n.t("titles.registration.edit") %></h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { method: :put }  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :name, I18n.t("form.user.edit.name") %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="row col-md-6"><%= I18n.t("views.registration.email_confirmation") %><%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :password, I18n.t("form.user.edit.password") %>
    <% if @minimum_password_length %>
      <br>
      <em>
        <%= I18n.t("views.registration.min_symbols.t1") %>
        <%= @minimum_password_length %>
        <%= I18n.t("views.registration.min_symbols.t2") %>
      </em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :password_confirmation, I18n.t("form.user.edit.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group mt-3 col-md-6">
    <%= f.label :current_password, I18n.t("form.user.edit.current_password") %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t("form.user.edit.submit"), class: "btn btn-success mt-3" %>
  </div>
<% end %>

<p>
  <%= button_to I18n.t("form.user.edit.destroy"), registration_path(resource_name),
                form: { data: { turbo_confirm: I18n.t("actions.confirmation") }}, method: :delete, class:"btn btn-danger" %>
</p>

