<%= form_with model: post, html: { multipart: true }, data: { turbo: false } do |form| %>

    <div class="form-group">
      <%= form.label :image, I18n.t("form.picture.photo") %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

  <div class="form-group mt-4">
    <%= form.label :title, I18n.t("form.post.title") %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.label :description, I18n.t("form.event.description") %>
    <%= form.text_area :description, { class: "form-control", rows: 5 } %>
  </div>

  <div class="actions mt-4">
    <%= form.submit I18n.t("form.event.submit"), class: "btn btn-primary" %>
    <%= link_to I18n.t("links.back"), :back, class: "btn btn-warning ms-2" %>
  </div>
<% end %>

